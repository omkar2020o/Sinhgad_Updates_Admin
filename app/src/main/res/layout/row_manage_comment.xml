<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="100dp"
    android:layout_marginHorizontal="5dp"
    android:layout_marginTop="5dp"
    android:background="#DFCBC1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <TextView
            android:id="@+id/comment_recyclerView_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Author"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/comment_recyclerView_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Comment"
            android:textSize="16sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/comment_recyclerView_timestamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Timestamp"
            android:textSize="14sp"
            android:textStyle="italic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right|center">

            <Button
                android:id="@+id/comment_recyclerView_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="DELETE"
                android:backgroundTint="@color/orange"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>